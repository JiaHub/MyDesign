<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryBackground"
        android:paddingTop="10dp"
        android:theme="@style/AppTheme">

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/home_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="15dp"
            android:textColor="@color/colorText"
            android:textSize="15sp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--第一栏-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryBackground"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/skill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:text="@string/_10"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skill"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:text="@string/_8"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/body"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:paddingEnd="30dp">

                        <TextView
                            android:id="@+id/mind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:text="@string/six"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mind"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGray" />

            <!--第二块-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryBackground"
                android:orientation="vertical"
                android:padding="10dp">

                <!--info-->
                <TextView
                    android:id="@+id/home_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/home_info" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/people">

                    <!-- 模块一 -->
                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/home_physical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="34dp"
                            android:layout_marginEnd="13dp"
                            android:text="@string/body"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/home_physical"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="15dp"
                            android:text="@string/physical"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="140dp"
                        android:background="@color/colorPrimaryBackground" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@+id/view"
                        android:orientation="horizontal">

                        <!--模块二-->
                        <RelativeLayout
                            android:id="@+id/rl2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:clickable="true">

                            <TextView
                                android:id="@+id/home_technical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="60dp"
                                android:text="@string/skill"
                                android:textColor="@color/colorPrimaryBackground"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@id/home_technical"
                                android:layout_marginEnd="20dp"
                                android:padding="5dp"
                                android:text="@string/technical"
                                android:textColor="@color/colorPrimaryBackground"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="10dp"
                            android:layout_height="150dp"
                            android:background="@color/colorPrimaryBackground" />

                        <!--模块三-->
                        <RelativeLayout
                            android:id="@+id/rl3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true">

                            <TextView
                                android:id="@+id/home_tactics"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="20dp"
                                android:layout_marginTop="60dp"
                                android:text="@string/home_tactics"
                                android:textColor="@color/colorPrimaryBackground"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/home_tactics"
                                android:layout_marginEnd="30dp"
                                android:padding="5dp"
                                android:text="@string/tactics"
                                android:textColor="@color/colorPrimaryBackground"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGray" />

            <!--风景欣赏-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/home_info1" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_1_1"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:background="@drawable/fong_1_wan"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tv_1_2"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:background="@drawable/fong_2_shui"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tv_1_3"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:background="@drawable/fong_3_flower"
                        android:layout_marginEnd="10dp" />

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGray" />

            <!--热门推荐-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/home_info2" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_2_1"
                        android:layout_width="200dp"
                        android:layout_height="140dp"
                        android:text="@string/hot_title1"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:background="@drawable/hot_3"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tv_2_2"
                        android:layout_width="200dp"
                        android:layout_height="140dp"
                        android:gravity="center"
                        android:text="@string/hot_title2"
                        android:textSize="30sp"
                        android:background="@drawable/hot_1"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tv_2_3"
                        android:layout_width="200dp"
                        android:layout_height="140dp"
                        android:text="@string/hot_title3"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:background="@drawable/hot_2"
                        />

                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>
