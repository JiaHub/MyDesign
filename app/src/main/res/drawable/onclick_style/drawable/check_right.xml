<?xml version="1.0" encoding="utf-8"?><!-- 圆形背景 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:useLevel="false">

    <!-- 内部填充颜色 -->
    <solid android:color="@color/colorPrimaryBackground" />
    <!-- 圆角 -->
    <corners
        android:bottomRightRadius="30dp"
        android:topRightRadius="30dp" />

    <!-- 外线的宽度，颜色天蓝色 -->
    <stroke
        android:width="1dp"
        android:color="@color/Sky_blue" />
    <!-- 边距 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:top="2dp" />

    <!-- 大小 -->
    <size
        android:width="100dp"
        android:height="25dp" />

</shape>
